<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.hp.cam.csl</groupId>
        <artifactId>csl-vcenter-compute-citype</artifactId>
		<version>18.1.1</version>
    </parent>
    <artifactId>vcenter-compute-citype</artifactId>
    <properties>
        <contentFolderLocation>${project.basedir}/src/main/resources/${project.parent.artifactId}-project
        </contentFolderLocation>
        <capsule.phase>install</capsule.phase>
        <sign.capsule.phase>install</sign.capsule.phase>
        <sign.cp.phase>verify</sign.cp.phase>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>base-utility</artifactId>
            <version>${base-utility.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <!-- copy and processes this files and outputs them to the target\classes dir -->
            <resource>
                <directory>${basedir}/src/main/resources/${project.parent.artifactId}-project</directory>
                <filtering>true</filtering>
                <includes>
                    <include>contentpack.properties</include>
                    <include>pom.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>${oo-sdk.group}</groupId>
                <artifactId>oo-contentpack-maven-plugin</artifactId>
            </plugin>
            <!-- Copy and process the files to the target folder-->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/${cpname}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/src/main/resources/</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>usecaseInfo.xml</include>
                                        <include>capsule.xml</include>
                                        <include>logo.png</include>
                                        <include>CsaCapsule.xsl</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/src/main/resources/</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/tools/**</include>
                                        <include>**/service-designs/**</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${project.build.directory}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>${project.artifactId}-${project.version}.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
            <!--  Install the file into the local maven repository to be used by other cp's-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <generatePom>false</generatePom>
                            <packaging>xml</packaging>
                            <pomFile>pom.xml</pomFile>
                            <file>
                                ${project.build.directory}/${cpname}/usecaseInfo.xml
                            </file>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Copy the dependencies into the outputDirectory-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>base-utility</artifactId>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>base-utility</artifactId>
                                    <type>xml</type>
                                    <destFileName>usecaseInfo.xml</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/${cpname}/base-utility</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>



                </executions>
            </plugin>
        </plugins>
    </build>
</project>
